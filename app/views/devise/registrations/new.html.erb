<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-navbar">
    <a class="navbar-brand" href="/">
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/4f/Twitter-logo.svg/584px-Twitter-logo.svg.png" />
</a>

  </div>
</div>
<div class="sign-up-container">
  <div class="container">
    <h2>Create your account</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, placeholder: 'First name', label: false,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "first-name" }%>
        <%= f.input :last_name, placeholder: 'Last name', label: false,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "last-name" }%>
        <%= f.input :username, placeholder: 'Username', label: false,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "username" }%>
        <%= f.input :email, placeholder: 'Email', label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password, placeholder: 'Password', label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
